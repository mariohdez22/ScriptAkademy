@model ScriptAkademy.Models.ViewModels.ClienteE
@{
    ViewData["Title"] = "Cliente_Detalle";
    Layout = "~/Views/Sitio/Diseño.cshtml";
}
<form asp-action="Cliente_Detalle" asp-controller="Clientes" method="post">
  <div class="mb-3" style="padding-top:50px;">
    <label  class="form-label">Nombre</label>
    <input type="text" class="form-control" required asp-for="oCliente.Nombre" >
    <div  class="form-text">Aqui se ingresa el nombre</div>
  </div>
  <div class="mb-3">
    <label  class="form-label">Correo</label>
    <input type="email" class="form-control" required asp-for="oCliente.Correo" >
    <div  class="form-text">Aqui se ingresa el correo</div>
  </div>
  <div class="mb-3">
    <label  class="form-label">Contraseña</label>
    <input type="password" class="form-control" required asp-for="oCliente.Contrasena">
  </div>
  <button type="submit" class="btn btn-primary">Agregar</button>
</form>

