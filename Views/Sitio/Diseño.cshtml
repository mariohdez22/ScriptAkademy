<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScriptAkademy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Diseño.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScriptAkademy.styles.css" asp-append-version="true" />
</head>
<body>
    
    <nav id="barra" class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" id="navs" asp-controller="Home" asp-action="Index">Script Akademy</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a id="enlace" class="nav-link" asp-controller="Inicio" asp-action="Index"><i class="bi bi-house-fill"></i> Inicio</a>
            </li>
            <li class="nav-item">
              <a id="enlace" class="nav-link" href="#"><i class="bi bi-book-half"></i> Cursos</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
             <li class="nav-item">
               <a id="enlace" class="nav-link" href="#"><i class="bi bi-door-open-fill"></i> Iniciar Sesion</a>
             </li>
             <li class="nav-item">
               <a id="enlace" class="nav-link" asp-controller="Clientes" asp-action="Cliente_Detalle"><i class="bi bi-person-badge-fill"></i> Registrarse</a>
             </li>
             <li class="nav-item">
               <a id="enlace" class="nav-link" href="#"></a>
             </li>
          </ul>
          </form>
        </div>
      </div>
    </nav>

    <div class="">

        <main role="main" class="">
            @RenderBody()
        </main>

    </div>

    <div id="pie" class="card-footer text-muted">
        <p>&copy; Script Akademy - All right recerved</p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
